<div class="completed_<%= task.completed %>">
  <p><span class="title"><%= task.title %></span>
    <%= link_to content_tag('span', '', class: 'fas fa-pencil-alt'), edit_task_path(task), class: 'action' %>
    <%= link_to content_tag('span', '', class: 'fas fa-trash'), task, method: :delete, class: 'action' %>
    <% if task.completed === false%>
        <%= link_to content_tag('span', '', class: 'far fa-square'), complete_task_path(task), method: :put, class: 'action' %>
    <% else%>
        <%= link_to content_tag('span', '', class: 'far fa-check-square'), complete_task_path(task), method: :put, class: 'action' %>
    <% end%>
  </p>
</div>
