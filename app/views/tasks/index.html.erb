<div class="col-md-12">
  <h3><p align="center"> <b style="text-transform:uppercase">Simple todo lists</b></p></h3>
  <h4><p align="center" style="text-transform:uppercase">from Ruby Garage</p></h4>

<div class="main-table">

  <table cellpadding="10">
      <th colspan="3">Complete the test task for Ruby Garage</th>
      <tr>
        <td style="width:80%" colspan="2">
          <%= render 'form_index' , remote: true%>
        </td>
          <td style="width:20%">
            <%=link_to "Add Task", new_task_path, class: 'btn btn-primary' %>
          </td>
      </tr>
      <tr>
            <td style="width:5%">
              <% @uncompleted_tasks.each do |task| %>
              <%= link_to content_tag('span', '', class: 'far fa-square'), complete_task_path(task), method: :put, class: 'action' %><br>
              <% end %>
            </td>
            <td style="width:90%">
              <%  @uncompleted_tasks.each do |task| %>
                <%= task.title %><br>
                  <% end %>
            </td>
            <td style="width:5%">
              <% @uncompleted_tasks.each do |task| %>
              <%= link_to content_tag('span', '', class: 'fas fa-pencil-alt'), edit_task_path(task), class: 'action' %>
                <%= link_to content_tag('span', '', class: 'fas fa-trash'), task, method: :delete, data: { confirm: 'delete task?'} %><br>
              <% end %>
            </td>
        </tr>

        <tr>
            <td>
              <% @completed_tasks.each do |task| %>
            <%= link_to content_tag('span', '', class: 'far fa-check-square'), complete_task_path(task), method: :put, class: 'action' %><br>
            <% end %>
            </td>
            <td>
              <% @completed_tasks.each do |task| %>
                <%= task.title %><br>
                  <% end %>
            </td>
            <td>
              <% @completed_tasks.each do |task| %>
              <%= link_to content_tag('span', '', class: 'fas fa-pencil-alt'), edit_task_path(task), class: 'action' %>
                <%= link_to content_tag('span', '', class: 'fas fa-trash'), task, method: :delete, class: 'action' %><br>
              <% end %>
            </td>
        </tr>
    </table>
</div>
</div>
